def saving(save_item1, save_item2):
    file=open("CodeFeast_data.txt","w")
    line=save_item1+"*"+save_item2
    file.write(line)
    file.close()

def retrieve():
    file=open("CodeFeast_data.txt","r")
    line=file.readline()
    line=line.split("*")
    task=line[0]
    deadline=line[1]
    task=task[2:-2]
    task=task.split("\', \'")
    deadline=deadline[1:-1]
    deadline=deadline.split("\'")
    return task,deadline
